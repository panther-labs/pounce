{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": true,
    "declaration": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "sourceMap": true,
    "paths": {
      "components/*": ["src/components/*"],
      "utils/*": ["src/utils/*"],
      "themes/*": ["src/themes/*"],
      "icons/*": ["src/icons/*"]
    }
  }
}
